@model IEnumerable<Common.article>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <container>
        <div class="col-md-4">
            <h1></h1>
            @{
                bool check = false;
                List<Common.article> SportsArticles = new List<Common.article>();
                foreach (var item in Model)
                {
                    if (check == false)
                    {
                        <a href='@Url.Action("Details", "Home", new { articleID = item.articleID })'>
                            <img src=@item.imageUrl @Url.Action("Details", "Home", new { articleID = item.articleID }) width="200" height="200" alt="IMAGES" />
                        </a>
                        check = true;

                        <br />
                    }
                    <a href='@Url.Action("Details", "Home", new { articleID = item.articleID })'>
                        @Html.DisplayFor(modelItem => item.article_name)
                    </a>
                    <br />
                    }
                }
</div>
    </container>
</body>
</html>
