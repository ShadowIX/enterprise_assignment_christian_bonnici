@model Common.article
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>


    <container>
        <div class="col-md-4">
    <h1></h1>
    @{
        DataAccess.AuthorsRepository ar = new DataAccess.AuthorsRepository();
        Common.author auth = ar.GetAuthorbyID(Convert.ToInt32(Model.authorID));

        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.article_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.article_sub_heading)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.category)
                </th>
                <th>
                    author
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.imageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.content)
                </th>
              
            </tr>
            <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.article_name)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => Model.article_sub_heading)
            </td>
            <td>
                @Html.ActionLink(Model.category, "Category", new { category = Model.category })             
            </td>

            <td>
                @Html.ActionLink(auth.email, "Author", new { email = auth.email })
            </td>
            <td>
                <img src=@Model.imageUrl width="200" height="200" alt="IMAGES" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.content)
            </td>
           
            </table>
             }
        </div>
    </container>
</body>
</html>
